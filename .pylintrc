# This pylintrc file will use the default settings except for the differently set values
[MASTER]
disable=
    C0114, # missing-module-docstring
    C0115, # Missing class docstring
    R0913, # Too many arguments
    R0917, # Too many positional arguments
    R0914, # Too many local variables

[BASIC]
# only match correct module names
module-naming-style=PascalCase

# only match correct class names
class-naming-style=PascalCase

# only match correct function names
function-naming-style=camelCase

# only match correct method names
method-naming-style=camelCase

# only match correct argument names
argument-naming-style=any

# only match correct variable names
variable-naming-style=any

[FORMAT]
max-line-length=140